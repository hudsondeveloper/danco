<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dancoTeste1.view.Cadastro"
			 Title="Cadastro"
			  BackgroundColor="#b9a375">
    <ContentPage.Content>
		<StackLayout >
			<Label Text="Login" TextColor="White" HorizontalOptions="Center"/>
			<Entry x:Name="etLogin" Placeholder="login"  ></Entry>
			
			<Label Text="Senha" TextColor="White" HorizontalOptions="Center"/>
			<Entry x:Name="etSenha" IsPassword="True"  Placeholder="senha"  BackgroundColor="White" ></Entry>
			
			<Label Text="E-mail" TextColor="White" HorizontalOptions="Center"/>
			<Entry x:Name="etEmail" Placeholder="E-mail"   Keyboard="Email"></Entry>
			
			<Button x:Name="btnCadastro" Text="Cadastrar" HorizontalOptions="Center" Clicked="cadastro_clicked"/>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>