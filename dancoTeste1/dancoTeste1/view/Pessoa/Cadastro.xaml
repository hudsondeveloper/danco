<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dancoTeste1.view.Cadastro"
			 Title="Cadastro">
    <ContentPage.Content>
		<StackLayout BackgroundColor="#F7BE81">
			<Label Text="Login" TextColor="White" HorizontalOptions="Center"/>
			<Entry x:Name="etLogin" Placeholder="login" BackgroundColor="White" Margin ="20,0,20,0"></Entry>
			
			<Label Text="Senha" TextColor="White" HorizontalOptions="Center"/>
			<Entry x:Name="etSenha" IsPassword="True"  Placeholder="senha"  BackgroundColor="White"  Margin ="20,0,20,0"></Entry>
			
			<Label Text="E-mail" TextColor="White" HorizontalOptions="Center"/>
			<Entry x:Name="etEmail" Placeholder="E-mail"  BackgroundColor="White" Keyboard="Email" Margin ="20,0,20,0"></Entry>
			
			<Button x:Name="btnCadastro" Text="Cadastrar" HorizontalOptions="Center" Clicked="cadastro_clicked"/>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>