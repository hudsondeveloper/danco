<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:dancoTeste1"
             x:Class="dancoTeste1.MainPage"
			 Title="Login"
			>

	<StackLayout BackgroundColor="#F7BE81">
        <!-- Place new controls here -->
		<Image Source="http://gnaritas.com.br/wp-content/uploads/2016/09/logo.png"  Margin="0,0,0,10" HeightRequest="100" WidthRequest="100"/>
		<Label Text="Login" TextColor="White" HorizontalOptions="Center"/>
		<Entry x:Name="etLogin" Placeholder="login"  Margin ="20,0,20,0" BackgroundColor="#E6E6E6"></Entry>
		<Label Text="Senha" TextColor="White" HorizontalOptions="Center"/>
		<Entry x:Name="etSenha" BackgroundColor="#E6E6E6" IsPassword="True"  Placeholder="senha"  Keyboard="Email" Margin ="20,0,20,0" ></Entry>
		<Button x:Name="btnLogin" Text="Login" HorizontalOptions="Center" Clicked="login_clicked" BorderColor="Transparent" BackgroundColor="Transparent"/>
		<Button x:Name="btnCadastro" Text="Cadastre-se" HorizontalOptions="Center" Clicked="cadastro_clicked"  BorderColor="Transparent" BackgroundColor="Transparent" Margin="0,-30,0,0" FontSize="12"/>
	</StackLayout>

</ContentPage>
