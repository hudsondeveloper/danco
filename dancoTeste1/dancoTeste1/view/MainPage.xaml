<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:dancoTeste1"
             x:Class="dancoTeste1.MainPage"
			 Title="Login"
			 BackgroundColor="#b9a375"
			>

	<StackLayout >
        <!-- Place new controls here -->
		<Image Source="http://gnaritas.com.br/wp-content/uploads/2016/09/logo.png"  Margin="0,0,0,10" HeightRequest="100" WidthRequest="100"/>
		<Label Text="Login" TextColor="White" HorizontalOptions="Center"/>
		<Entry x:Name="etLogin" Placeholder="login"  BackgroundColor="#b9a375"></Entry>
		<Label Text="Senha" TextColor="White" HorizontalOptions="Center"/>
		<Entry x:Name="etSenha" BackgroundColor="#b9a375" IsPassword="True"  Placeholder="senha"  ></Entry>
		<Button x:Name="btnLogin" Text="Login" HorizontalOptions="Center" Clicked="login_clicked" BorderColor="Transparent" BackgroundColor="Transparent"/>
		<Button x:Name="btnCadastro" Text="Cadastre-se" HorizontalOptions="Center" Clicked="cadastro_clicked"  BorderColor="Transparent" BackgroundColor="Transparent" VerticalOptions="End" FontSize="12"/>
	</StackLayout>

</ContentPage>
